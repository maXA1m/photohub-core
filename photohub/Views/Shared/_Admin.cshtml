<!DOCTYPE html>
<html style="background-color: #363636;">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title &#8729; Admin Panel &#8729; PhotoHub</title>

    <meta name="robots" content="noindex,nofollow" />
    <meta name="theme-color" content="#333">

    <link rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16">
    <link rel="icon" type="image/png" href="/favicon-24x24.png" sizes="24x24">
    <link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="/favicon-64x64.png" sizes="64x64">
    <link rel="icon" type="image/png" href="/favicon-128x128.png" sizes="128x128">
    <link rel="icon" type="image/png" href="/favicon-256x256.png" sizes="256x256">
    <link rel="icon" type="image/png" href="/favicon-512x512.png" sizes="512x512">

    <link href="https://use.fontawesome.com/releases/v5.0.7/css/all.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.1/css/bulma.min.css" />

    <link href="~/css/admin.css" rel="stylesheet" />

    @await RenderSectionAsync("Styles", required: false)

    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.5.13/vue.min.js"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/vue-resource@1.3.4"></script>

    <script defer src="~/js/admin.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

    @*<script defer src="~/js/registerServiceWorker.js"></script>*@

</head>
<body id="body" class="has-background-dark">

    <!--  Preloader  -->
    <div id="preloader" data-hidden="true">
        <div class="bar"></div>
        <div class="bar"></div>
        <div class="bar"></div>
    </div>

    <!--  Desktop Navbar  -->
    <nav id="desktopNavbar" class="has-background-dark">
        <a class="button is-dark is-medium" href="/photos" title="Home">Home</a>
        <a class="button is-white is-medium" href="/admin" title="Dashboard">Dashboard</a>
        <a class="button is-white is-medium" href="/admin/stats" title="Statistics">Statistics</a>
        <a class="button is-white is-medium" href="/admin/reports" title="Reported photos">Reports</a>
        <a class="button is-white is-medium" href="/admin/users" title="Users">Users</a>
    </nav>

    <!--  Mobile Navbar  -->
    <nav id="mobileNavbar" class="has-background-dark">
        <a class="button is-dark is-medium" href="/photos" title="Home"><i class="fas fa-home"></i></a>
        <a class="button is-dark is-medium" href="/admin/users" title="Users"><i class="fas fa-address-book"></i></a>
        <a class="button is-dark is-medium" href="/admin/reports" title="Reported photos"><i class="fas fa-thumbs-down"></i></a>
        <a class="button is-dark is-medium" href="/admin/stats" title="Statistics"><i class="fas fa-chart-pie"></i></a>
        <a class="button is-dark is-medium" href="/admin" title="Dashboard"><i class="fas fa-tasks"></i></a>
    </nav>

    <!--  Main content  -->
    <main id="primaryContainer" class="has-background-dark">
        <h1 class="title is-spaced is-2 is-uppercase has-text-centered has-text-weight-bold has-text-white" title="@ViewBag.Title">@ViewBag.Title</h1>
        @RenderBody()
    </main>
</body>
</html>